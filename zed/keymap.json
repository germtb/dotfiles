[
  {
    "bindings": {
      "cmd-b": "workspace::ToggleRightDock",
      "ctrl-ยง": "workspace::ToggleBottomDock",
      "ctrl-`": "workspace::ToggleBottomDock",
      "cmd-enter": "editor::OpenExcerpts",
      "ctrl-k": "menu::SelectPrev",
      "ctrl-j": "menu::SelectNext"
    }
  },
  {
    "context": "Editor",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-k": "editor::ContextMenuPrev",
      "ctrl-j": "editor::ContextMenuNext"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !VimObject",
    "bindings": {
      "shift-s": [
        "vim::PushOperator",
        {
          "AddSurrounds": {}
        }
      ]
    }
  },
  {
    "context": "vim_mode == visual && !menu",
    "bindings": {
      "shift-a": "editor::SplitSelectionIntoLines"
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "O": ["workspace::SendKeystrokes", "shift-o escape"],
      "o": ["workspace::SendKeystrokes", "o escape"],
      "alt-j": ["workspace::SendKeystrokes", "} j"],
      "alt-k": ["workspace::SendKeystrokes", "{ k"]
    }
  },
  {
    "context": "search::FocusSearch",
    "bindings": {
      "enter": "vim::SelectNextMatch",
      "shift-enter": "vim::SelectPreviousMatch"
    }
  }
]
