{
  "extend_comment_on_newline": false,
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "neighbour"
  },
  "file_scan_exclusions": [
    "**/llvm-project",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "tab_size": 2,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "format_on_save": "on",
  "vim_mode": true,
  "base_keymap": "Atom",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Andromeda"
  },
  "project_panel": {
    "dock": "right"
  },
  "show_whitespaces": "all"
}
